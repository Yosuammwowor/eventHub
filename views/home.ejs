<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event Hub</title>
  </head>
  <body>
    <h1>HiðŸ‘‹, Welcome to Event Hub</h1>
    <p>Here you can book or create event based on your preference's</p>

    <h2>Available Events</h2>
    <% if (events) { %>
    <ul>
      <% for (let event of events) { %>
      <% const date = String(event.date.getDate()).padStart(2, '0'); const month
      = String(event.date.getMonth() + 1).padStart(2, '0'); const year =
      event.date.getFullYear(); %>
      <li>
        <a href="/events/<%= event._id %>">
          <%= event.title %> - <%= `${date}/${month}/${year}` %></li>
        </a>
      <% } %>
    </ul>
    <% } else { %>
    <h3>No Events detected!</h3>
    <% } %>

    <% if (!getUserStatus()) { %>
    <a href="/login">Login</a>
    <a href="/register">Register</a>
    <% } else { %>
      <a href="/dashboard/<%= userId %>">Kembali</a>
    <% } %>
  </body>
</html>
