<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event Hub</title>
  </head>
  <body>
    <h1>Event information:</h1>
    <ul>
      <li>Title: <%= events.title %></li>
      <li>Deskripsi: <%= events.description %></li>
      <li>Lokasi: <%= events.location %></li>

      <% const date = String(events.date.getDate()).padStart(2, '0'); const
      month = String(events.date.getMonth() + 1).padStart(2, '0'); const year =
      events.date.getFullYear(); %>
      <li>Tanggal: <%= `${date}/${month}/${year}` %></li>

      <li>Penyelenggara: <%= events.createdBy.username %></li>
      <% if (events.participants.length !== 0) { %>
      <li>
        Partisipan: <br />
        <ul>
          <% for (let participant of events.participants) { %>
          <li><%= participant.email %></li>
          <% } %>
        </ul>
      </li>
      <% } else { %>
      <li>Partisipan: Belum AdaðŸ¤”</li>
      <% } %>
    </ul>
    <a href="/">Kembali</a>
    <% if (getUserStatus() && !userStatus) { %>
    <form action="/events/<%= events._id %>/join" method="post">
      <button type="submit">Join</button>
    </form>
    <% } %>
  </body>
</html>
